<div class="s_article_container non_hover col-xs-12">
  <div class=row">
    <%= render 'article' %>
  </div>
  <div class="row">
    <div class='article-actions col-xs-12'>
      <ul class="list-inline">
        <li>
          <%= link_to root_path do %>
            Back to Articles
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li><%= link_to 'Delete', article_path(@article), 
            :confirm => "Are you sure you want to delete this article?", 
            :method => :delete, :action => "destroy", :class=>'muted' %>
          </li>
          <li><%= link_to 'Edit', edit_article_path(@article), :class=>'muted' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
